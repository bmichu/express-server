<h2>Contact me</h2>
{{#if isSent}}
    Something is right, file {{file}} has been saved
{{/if}} 
{{#if isError}}
    Something is wrong
{{/if}} 
<form action="/contact/send-message" method="POST" enctype="multipart/form-data" >
  <label>
    Your name: <input type="text" name="author" placeholder="John Doe">
  </label>
  <label>
    Your email: <input type="email" name="sender" placeholder="matcrono@gmail.com">
  </label>
  <label>
    Title: <input type="text" name="title" placeholder="Lorem Ipsum">
  </label>
   <label>
    Project Design: <input type="file" name="file" placeholder="Hero.jpg" accept=".png, .jpg, .jpeg, .gif">
  </label>
   <label>
    Message: <textarea name="message" placeholder="Put your text here"></textarea>
  </label>
  <button type="submit">Send message</button>
</form>

